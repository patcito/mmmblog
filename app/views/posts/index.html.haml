.header
  %h1
    %a
      Ricodigo

.article
  %h2
    Posts
  %ul
    - for post in @posts
      %li= "#{post.created_at.strftime("[%d %b %Y]")}#{link_to post.title, post_slug_path(post)} (#{post.comments.count} comments)"
  %h2
    Writers
  %ul
    %li
      = writers_links
  %h2
    Tags
  %ul
    %li
      = tag_cloud(params[:tag])
  %h2
    Code
  %ul
    %li
      %a{:href=>"http://gitorious.org/~ricodigo"}
        http://gitorious.org/~ricodigo
  %h2
    Contact
