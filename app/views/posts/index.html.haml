    %li
      %a{:href=>"mailto:contact@ricodigo.com"}
        contact@ricodigo.com
    %li
      %a{:href=>"http://twitter.com/ricodigo"}
        http://twitter.com/ricodigo
    %li
      %a{:href=>"http://identi.ca/ricodigo"}
        http://identi.ca/ricodigo
