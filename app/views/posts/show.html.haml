#header
  %h1
    = link_to fullname(@post.author), custom_posts(nil, @post.author)
.article
  %h1
    = @post.title
%p
  = @post.body
%h1
  = "Posted on #{@post.created_at.to_s}"
%h4
  = "#{@post.comments.count} comments"
%p
  %h4
    Tags
    = linked_tag_list(@post.tags)
#comments-list
  - @post.comments.each do |comment|
    %p{:id => comment.id}
      %h4
        = "#{comment.author} says:"
    %p
      = auto_link(h(comment.body), :all,  { "rel" => 'nofollow' })

- form_for([@post, @comment],:url=>comment_form_url(@post, @comment)) do |f|
  %p
    %label
      %h4
        = 'Your name or OpenID:'
  %p
    = f.text_field :author
  %p
    = f.text_area :body
  %p
    = submit_tag "Post"