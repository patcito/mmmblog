-form_for(@post, :url=>admin_post_path) do |f|
  %p
    %label
      title
  %p
    = f.text_field :title
  %p
    %label
      body
  %p
    = f.text_area :body
  %p
    %label
      slug
  %p
    = f.text_field :slug
  %p
    %label
      tags
  %p
    = f.text_field :tags, :value=>@post.tags.join(',')
  %p
    %label
      published_at
  %p
    = f.text_field :published_at
  %p
    %label
      edited_at
  %p
    = f.text_field :edited_at, :value => Time.now
  %p
    = submit_tag "save"

%p
  This post has
  = link_to "#{@post.comments.count} comments", admin_post_comments_path(@post)


